#include <stdio.h>
int main ()
{
	float a,b,c;
	printf("Just enter whatever you want, as long as it's a number");
	scanf("%f %f %f", &a,&b,&c);
	
	if(a>b and a>c){
			printf ("number 1 is the largest");
	}else
	{
		if(b>a and b>c){
			printf ("number 2 is the largest");
		}else
		{
			if(c>a and c>b){
				printf ("number 3 is the largest");
			}
		}
	}

	return 0;
}
